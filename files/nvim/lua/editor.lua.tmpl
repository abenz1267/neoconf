local scopes = {o = vim.o, b = vim.bo, w = vim.wo, g = vim.g}

function opt(scope, key, value)
    scopes[scope][key] = value
    if scope == 'g' then
    	scopes['g'][key] = value
    elseif scope ~= 'o' then
    	scopes['o'][key] = value
    end
end

